<p id="notice"><%= notice %></p>


<div class="container">
<h1>Contacts</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>Country</th>
      <th>State</th>
      <th>Telephone</th>
      <th>Mobile</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.firstname %> <%= contact.lastname %></td>
        <td><%= contact.streetnumber %>, <%= contact.streetname %>
        <% if contact.aptnumber != '' %>
          <%= contact.aptnumber %>
        <% end %>
        </td>
        <td><%= contact.city %></td>
        <td><%= contact.country %></td>
        <td><%= contact.state %></td>
        <td><%= contact.telephone %></td>
        <td><%= contact.mobile %></td>
        <td><%= contact.email %></td>
        <td><%= link_to 'Show more', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm:
        'Are you sure?' }, class: "del" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Contact', new_contact_path %>
</div>
