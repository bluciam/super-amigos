<p id="notice"><%= notice %></p>

<p><b>
  <%= @contact.firstname %>
  <%= @contact.lastname %>
  (
  <%= @contact.nickname %>
  )
  </b>
  <br>

  <%= @contact.streetnumber %>
  <%= @contact.streetname %>
  <% if @contact.aptnumber %>
    , Apt. 
    <%= @contact.aptnumber %>
  <% end %>
  <br>
  <%= @contact.city %>,
  <%= @contact.state %>
  <%= @contact.country %>
  <br>
  <%= @contact.postal_code %>
</p>

<p>
  <%= @contact.telephone %>
</p>

<p>
  <%= @contact.mobile %>
</p>

<% if @contact.notes %>
  <p>
    <strong>Notes:</strong>
    <%= @contact.notes %>
  </p>
<% end %>

<%= link_to 'Edit', edit_contact_path(@contact) %> |
<%= link_to 'Back', contacts_path %>
