
<div class="container">
<p id="notice"><%= notice %></p>
<p><h1>
  <%= @contact.firstname %>
  <%= @contact.lastname %>
  (
  <%= @contact.nickname %>
  )
  </h1>
  <br>

  <%= @contact.streetnumber %>
  <%= @contact.streetname %>
  <% if @contact.aptnumber.nil? %>
    , Apt. 
    <%= @contact.aptnumber %>
  <% end %>
  <br>
  <%= @contact.city %>,
  <%= @contact.state %>
  <%= @contact.country %>
  <br>
  <%= @contact.postal_code %>

  <br>
  <%= @contact.telephone %>
  <%= @contact.mobile %>

  <% if @contact.notes %>
    <p>
      <strong>Notes:</strong>
      <%= @contact.notes %>
    </p>
  <% end %>

  <p>
    <strong>Email:</strong>
    <%= @contact.email %>
  </p>

  <%= link_to 'Edit', edit_contact_path(@contact), class: "btn btn-primary" %> 
  <%= link_to 'Back', contacts_path, class: "btn btn-primary" %>
</div>
